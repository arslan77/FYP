@model IEnumerable<Attendance_System.Models.Subject>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered" id="mydata">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.courseCode)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.theoryHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.labHours)
            </th>
            <th></th>
        </tr>
    </thead><tbody>
    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.courseCode)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.theoryHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.labHours)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.courseCode }) |
                @Html.ActionLink("Details", "Details", new { id = item.courseCode }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.courseCode })
            </td>
        </tr>
    }
</tbody>

</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datatable")
    <script>
        $(document).ready(function () {
            $('#mydata').DataTable();
        });
    </script>
}
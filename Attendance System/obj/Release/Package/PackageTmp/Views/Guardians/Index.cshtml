@model IEnumerable<Attendance_System.Models.Guardian>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-bordered" id="mytable">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.guardianName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.relationship)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mobileNumber)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.guardianName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.relationship)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mobileNumber)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.guardianID }) |
                @Html.ActionLink("Details", "Details", new { id = item.guardianID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.guardianID })
            </td>
        </tr>
    }

</table>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/datatable")
    <script>
        $(document).ready(function () {
            $('#mydata').DataTable();
        });
    </script>
}